  
@import url('http://fonts.googleapis.com/css?family=Open+Sans:400,700');

html {
  font: 14px 'Open Sans';
  color: #003270;
  padding: 20px 30px;
}

svg {
  font: 14px 'Open Sans';
  color: #003270;
}

.axis path,
.axis line {
  fill: none;
  stroke: #000;
  shape-rendering: crispEdges;
}

.axis text {
  fill: #000;
}

.axis .tick line {
  stroke: rgba(0, 0, 0, 0.1);
}

.area {
  stroke-width: 1;
}

.area.outer,
.legend .outer {
  fill: #0079BF;
  stroke: #0079BF;
}

.area.inner,
.legend .inner {
  fill: #00BCF1;
  stroke: #00BCF1;
}

.median-line,
.legend .median-line {
  fill: none;
  stroke: #003270;
  stroke-width: 3;
}

.legend .legend-bg {
  fill: rgba(0, 0, 0, 0.5);
  stroke: rgba(0, 0, 0, 0.5);
}

